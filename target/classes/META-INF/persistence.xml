<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="employee_db" transaction-type="JTA">
        <jta-data-source>jdbc/employee_db</jta-data-source>

        <class>com.employee.management.model.Employee</class>
        <class>com.employee.management.model.Vacation</class>
        <class>com.employee.management.model.Message</class>
        <class>com.employee.management.model.Manager</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
            <property name="hibernate.hbm2ddl.auto" value="create" />
            <property name="jakarta.persistence.transactionType" value="JTA"/>
            <property name="jakarta.persistence.jtaDataSource" value="jdbc/employee_db"/>
        </properties>
    </persistence-unit>

</persistence>
